<div class="jumbotron">
    <h2>Add ideas</h2>
    <div class="card card-body">
        <h3>Edit this post</h3>
        <form action="/explore/{{place.id}}?_method=PUT" method="post">
            <div class="form-group">
                <h4>Select Photo</h4>
                <label for="photoTitle">Photo Title</label>
                <input type="text" class="form-control" name="photoTitle" value="{{place.title}}" required>
            </div>
            <div class="form-group">
                <label for="status">Say Something</label>
                <textarea class="form-control" name="details" required>{{place.details}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>

        </form>
    </div>
</div>